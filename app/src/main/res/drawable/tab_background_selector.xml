<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_blue" /> <!-- Selected background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <stroke
                android:width="1dp"
                android:color="@color/light_gray_border" /> <!-- Border color and width -->
        </shape>
    </item>
</selector>
